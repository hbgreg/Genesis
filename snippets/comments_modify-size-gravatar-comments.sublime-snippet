// Modify the size of the Gravatar in comments
add_filter( 'genesis_comment_list_args', '${2:sp_comments_gravatar}' );
function ${2:sp_comments_gravatar}( \$args ) {
	\$args['avatar_size'] = ${1:96};
	return \$args;
}
