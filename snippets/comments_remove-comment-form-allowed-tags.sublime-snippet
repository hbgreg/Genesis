// Remove comment form allowed tags
add_filter( 'comment_form_defaults', '${1:sp_remove_comment_form_allowed_tags}' );
function ${1:sp_remove_comment_form_allowed_tags}( \$defaults ) {
	\$defaults['comment_notes_after'] = '';
	return \$defaults;
}
